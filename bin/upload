#!/bin/bash
# 0x0 - client for 0x0.st

me=${0##*/}
host=https://0x0.st

if [[ ! -t 1 ]];then
    quiet=true
fi

help() {
    cat >&2 <<EOF
Usage: ${me} [-f <file>] [-s <url>] [-u <url>] [file]
Client for interacting with 0x0.st.
If no file is given, upload stdin.
    -f <file>       - upload <file>
    -s <url>        - shorten <url>
    -u <url>        - upload content of <url>
EOF
}

clip() {
    if command -v xsel >/dev/null 2>&1;then
        printf '%s' "$@" | xsel -b
    fi
	if command -v pbcopy >/dev/null 2>&1;then
        printf '%s' "$@" | pbcopy
    fi
}

file_upload() {
    local curl_opts="-s" file="$1" type
    [[ "${progress_quiet}" ]] || curl_opts="-#"
    [[ "${quiet}" ]] || printf "uploading \"%s\"...\n" "${file}" >&2
    [[ "$#" -gt 1 ]] && printf "%s ... " "${url}"
    url=$(curl ${curl_opts} -F "file=@${file}" "${host}")
    printf '%s' "${url}"
    [ -t 1 ] && printf '\n'
    clip "${url}"
	notify "${url} uploaded"
}

shorten_url() {
    local curl_opts="-s" url="$1" shortened
    [[ "${progress_quiet}" ]] || curl_opts="-#"
    [[ "${quiet}" ]] || printf "shortening \"${url}\"...\n" >&2
    [[ "$#" -gt 1 ]] && printf "%s ... " "${url}"
    shortened=$(curl ${curl_opts} -F "shorten=${url}" "${host}")
    printf '%s' "${shortened}"
    [ -t 1 ] && printf '\n'
    clip "${shortened}"
}

upload_url() {
    local curl_opts="-s" url="$1" uploaded
    [[ "${progress_quiet}" ]] || curl_opts="-#"
    [[ "${quiet}" ]] || printf "uploading \"%s\"...\n" "${url}" >&2
    [[ "$#" -gt 1 ]] && printf "%s ... " "${url}"
    uploaded=$(curl ${curl_opts} -F "url=${url}" "${host}")
    printf '%s' "${uploaded}"
    [ -t 1 ] && printf '\n'
    clip "${uploaded}"
	notify
}

notify() {
	if command -v notify-send >/dev/null 2>&1; then
		notify-send "$1"
	fi	
}

# 1KiB = 1024 bytes
# 1MiB = 1024 KiB
# max size - 256MiB

max_size=$(( (1024*1024) * 256 ))

if [[ -f "$1" || "$#" -lt 1 ]];then
    mode="default"
else
    mode="$1"
    shift
fi

case "$mode" in
    default)
        if [[ "$#" -gt 0 ]];then
            file_upload "${@}"
        else
            cat | quiet=true file_upload "/dev/stdin"
        fi
    ;;
    -f)
        file_upload "${@}"
    ;;
    -u)
        upload_url "${@}"
    ;;
    -s)
        shorten_url "${@}"
    ;;
    -h|--help)
        help
    ;;
esac
